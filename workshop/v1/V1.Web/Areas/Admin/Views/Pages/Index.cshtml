@model IReadOnlyCollection<V1.Web.Models.PageContent>
@{
    ViewData["Title"] = "Yönetim Paneli";
}

<h1>Yönetim Paneli</h1>

@if (TempData["Message"] is string message)
{
    <div class="alert alert-success">@message</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Slug</th>
            <th>Baþlýk</th>
            <th>Son Güncelleme (UTC)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Slug</td>
                <td>@item.Title</td>
                <td>@item.UpdatedAtUtc.ToString("u")</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Pages" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
